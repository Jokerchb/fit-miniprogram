.tab-bar {
  position: fixed;
  bottom: 50rpx;
  left: 0;
  right: 0;
  height: 120rpx;
  background: rgb(255, 255, 255);
  border-radius: 50rpx;
  box-shadow: 10px 10px 5px rgba(136, 136, 136,0.8);
  margin-left: 50rpx;
  margin-right: 50rpx;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  border-radius: 50rpx;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item .cover-image {
  width: 80rpx;
  height: 80rpx;

}
.tab-bar-item .cover-image-slected {
  width: 100rpx;
  height: 100rpx;

}

.tab-bar-item .cover-view {
  font-size: 18rpx;
}
