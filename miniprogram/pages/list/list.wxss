page {
  background-color: #fefefe;
}
.Tab {
  position: fixed;
  height: 100%;
  width: 20%;
  background-color: #f7f7f7;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 33rpx;
  color: #888888;
}
.Tab .tab-item {
  padding: 20rpx;
  display: flex;
  flex-direction: row-reverse;
  justify-content: center;
  width: 100%;
}
.content {
  position: relative;
  left: 25%;
  z-index: 5;
  font-size: 50rpx;
}
.border-color0 {
  height: 85rpx;
  border-left-width: 10rpx;
  border-left-style: solid;
  border-left-color: #e49214;
}
.border-color0:before {
  content: '';
  position: fixed;
  left: -10rpx;
  top: 0;
  width: 0;
  height: 85rpx;
  z-index: -2;
  transition: 0.2s;
  background: #e49214;
}
.active0 {
  z-index: 1;
  background: transparent;
  color: #ffffff;
  font-weight: bolder;
}
.active0:before {
  z-index: -1;
  width: 21%;
  background: #e49214;
  box-shadow: 10rpx 10rpx 10rpx #888888;
}
