.detail {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}
.detail .pic {
  width: 600rpx;
  background-color: #ffffff;
  box-shadow: 0 0 10rpx #888888;
  border-radius: 20rpx;
}
.detail .name {
  margin-top: 50rpx;
  font-size: 80rpx;
  font-family: 'cola';
}
.detail .cal {
  width: 80%;
  margin-top: 50rpx;
  font-size: 50rpx;
  font-family: 'jianti';
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.detail .cal .PAM {
  position: relative;
  left: 50rpx;
  display: flex;
  flex-direction: row;
  align-self: flex-end;
}
.detail .cal .PAM .num {
  font-size: 35rpx;
  width: 35rpx;
  position: relative;
  left: 8rpx;
  top: 5rpx;
}
.detail .cal .PAM .minus {
  width: 50rpx;
  height: 50rpx;
}
.detail .cal .PAM .minus .minusPic {
  width: 50rpx;
  height: 50rpx;
}
.detail .cal .PAM .plus {
  width: 50rpx;
  height: 50rpx;
}
.detail .cal .PAM .plus .plusPic {
  width: 50rpx;
  height: 50rpx;
}
.detail .noCal {
  margin-top: 50rpx;
  font-size: 50rpx;
  font-family: 'jianti';
}
.detail .submit {
  position: relative !important;
  height: 100rpx;
  font-family: 'cola';
  width: 150rpx;
  top: 50rpx;
  font-size: 60rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx ;
  background-color: #ffc300;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
