page {
  background-color: #ffffff;
}
.putin {
  position: relative;
  top: 0rpx;
  background-color: #282828;
  height: 3800rpx;
}
.logo {
  font-family: "logo";
  font-size: 100rpx;
  position: fixed;
  top: 50rpx;
  width: 100%;
  background-color: #282828;
  color: #ffffc8;
  z-index: 5;
}
.searchcolor {
  background-image: linear-gradient(#282828, white);
}
.swipercolor {
  background-color: #282828;
}
.searchPartInit {
  position: relative;
  top: -1rpx;
  transition: all 1s;
}
.searchPartMove {
  position: relative;
  top: -250rpx;
}
.swiper-init {
  position: relative;
  top: 0rpx;
  transition: all 1s;
}
.swiper-moved {
  position: relative;
  top: -500rpx;
}
.camera-speech {
  display: flex;
  position: relative;
  top: 20rpx;
  flex-direction: row;
  justify-content: space-around;
}
.camera-speech .camera-init {
  height: 150rpx;
  width: 150rpx;
  position: relative;
  top: 0rpx;
  left: 30rpx;
  border-radius: 80rpx;
  background-color: #bc994e;
  padding: 40rpx;
  transition: left 1s;
}
.camera-speech .speech-init {
  height: 150rpx;
  width: 150rpx;
  position: relative;
  right: 30rpx;
  top: 0rpx;
  border-radius: 80rpx;
  background-color: #bc994e;
  padding: 40rpx;
  transition: right 1s;
}
.camera-speech .cameraMove {
  left: -300rpx;
}
.camera-speech .speechMove {
  right: -300rpx;
}
.bottom-init {
  position: relative;
  bottom: 0rpx;
  display: flex;
  flex-direction: column;
  opacity: 1;
  transition: all 1s;
}
.bottom-init .dailyQuestion {
  position: relative;
  top: 200rpx;
  height: 500rpx;
  width: 550rpx;
  background-color: #c6c6c6;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-self: center;
}
.bottomMove {
  opacity: 0;
}
.blank {
  height: 600rpx;
}
.searchTip-init {
  opacity: 0;
  position: relative;
  top: -850rpx;
  font-size: 35rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  align-self: start;
  left: 30rpx;
  height: 300rpx;
  transition: all 1s;
}
.searchTip-init .history .content {
  color: black;
  display: flex;
  background-color: whitesmoke;
  border-radius: 30rpx;
  justify-content: center;
  width: 200rpx;
  height: 50rpx;
}
.searchTip-init .hot .content {
  color: black;
  display: flex;
  background-color: whitesmoke;
  border-radius: 30rpx;
  justify-content: center;
  width: 200rpx;
  height: 50rpx;
}
.searchTipMove {
  opacity: 1;
}
