page {
  background-color: #ffffff;
}
.putin {
  position: relative;
  top: 0rpx;
  background-color: #282828;
  height: 3800rpx;
}
.logo {
  font-family: "logo";
  font-size: 100rpx;
  position: fixed;
  top: 50rpx;
  width: 100%;
  background-color: #282828;
  color: #ffffc8;
  z-index: 5;
}
.searchShadow {
  transition: all 1s;
  box-shadow: 10px 10px 5px #888888;
}
.searchShadowMove {
  box-shadow: 0px 0px 0px #888888;
}
.swipercolor {
  background-image: linear-gradient(#282828, white);
}
.searchPartInit {
  position: relative;
  top: -5rpx;
  transition: all 1s;
  transition-timing-function: ease-out;
}
.searchPartMove {
  position: relative;
  top: -420rpx;
}
.swiper-init {
  position: relative;
  top: 0rpx;
  transition: all 1s;
}
.swiper-moved {
  position: relative;
  top: -600rpx;
}
.camera-speech {
  display: flex;
  position: relative;
  top: 40rpx;
  flex-direction: row;
  justify-content: space-around;
}
.camera-speech .camera-init {
  height: 150rpx;
  width: 150rpx;
  position: relative;
  top: 0rpx;
  left: 30rpx;
  border-radius: 80rpx;
  background-color: #f5f5f5;
  padding: 40rpx;
  box-shadow: 0px 0px 20px #888888;
  transition: left 1s;
}
.camera-speech .speech-init {
  height: 150rpx;
  width: 150rpx;
  position: relative;
  right: 30rpx;
  top: 0rpx;
  border-radius: 80rpx;
  box-shadow: 0px 0px 20px #888888;
  background-color: #f5f5f5;
  padding: 40rpx;
  transition: right 1s;
}
.camera-speech .cameraMove {
  left: -300rpx;
}
.camera-speech .speechMove {
  right: -300rpx;
}
.bottom-init {
  position: relative;
  bottom: 0rpx;
  display: flex;
  flex-direction: column;
  opacity: 1;
  transition: all 1s;
}
.bottom-init .dailyQuestion {
  position: relative;
  top: 150rpx;
  height: 800rpx;
  width: 85%;
  background-color: #FFFFFF;
  display: flex;
  box-shadow: 0rpx 0rpx 20rpx #888888;
  border-radius: 20rpx;
  flex-direction: column;
  align-items: center;
  align-self: center;
}
.bottom-init .dailyQuestion .title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  align-items: center;
  background-color: #cfcfcf;
  border-radius: 20rpx 20rpx 0 0;
}
.bottom-init .dailyQuestion .title .titleImage {
  height: 100rpx;
  width: 100rpx;
}
.bottom-init .dailyQuestion .title .titleContent {
  font-size: 50rpx;
}
.bottom-init .dailyQuestion .questionPic {
  margin-top: 50rpx;
  height: 450rpx;
  width: 70%;
}
.bottom-init .dailyQuestion .questionStem {
  font-size: 50rpx;
}
.bottom-init .dailyQuestion .option {
  display: flex;
  justify-content: space-around;
  width: 100%;
  align-items: center;
  font-size: 50rpx;
  margin-top: 30rpx;
  margin-left: 20rpx ;
  margin-right: 20rpx;
}
.bottom-init .dailyQuestion .option .optionButton {
  width: 30%;
  box-shadow: 0rpx 0rpx 5rpx #888888;
}
.bottom-init .dailyQuestion .answerTip {
  display: flex;
  justify-content: space-around;
  width: 100%;
  align-items: center;
  font-size: 30rpx;
  margin-top: 30rpx;
  margin-left: 20rpx ;
  margin-right: 20rpx;
}
.bottomMove {
  opacity: 0;
}
.blank {
  height: 600rpx;
}
.searchTip-init {
  opacity: 0;
  position: relative;
  top: -850rpx;
  font-size: 35rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  align-self: start;
  left: 30rpx;
  height: 300rpx;
  transition: all 1s;
}
.searchTip-init .history .content {
  color: black;
  display: flex;
  background-color: whitesmoke;
  border-radius: 30rpx;
  justify-content: center;
  width: 200rpx;
  height: 50rpx;
}
.searchTip-init .hot .content {
  color: black;
  display: flex;
  background-color: whitesmoke;
  border-radius: 30rpx;
  justify-content: center;
  width: 200rpx;
  height: 50rpx;
}
.searchTipMove {
  opacity: 1;
}
.slogan {
  background-color: #272727;
  color: #ffffc8;
  font-family: "logo";
  padding-top: 50rpx ;
  font-size: 45rpx;
  transition: all 1s;
  height: 120rpx;
}
.slogan .sloganContent {
  position: relative;
  top: 15rpx;
}
.slogan-move {
  background-color: #272727;
  color: #ffffc8;
  font-family: "logo";
  padding-top: 50rpx ;
  height: 150rpx;
  font-size: 45rpx;
}
