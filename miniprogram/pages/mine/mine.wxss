page{
  background-color: #fff;
}

.profile{
  position: relative;
  display: flex;
  flex-direction: column;
  background-color: #272727;
  color: #fff;
  border-radius: 0 0 70% 70%;
  padding-bottom: 50rpx;
  box-shadow: 0 6px 10px rgba(19, 19, 19, 0.678);
  animation: profileAnimation 1s ;
}
@keyframes profileAnimation {
  from {
      top:-200rpx
  }
  to {
      top:0
  }
}

.information{
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  width: 100%;
}

.information-img{
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  border-radius: 50%;
  margin: 30rpx;
}

.information-name{
  color: #fff;
  align-self: center;
  margin: 20rpx;
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
}

.tips{
  font-size: 20rpx;
  font-family: 'jianti';
}

.title{
  width: 700rpx;
  display: flex;
  flex-direction: row;
  margin: 30rpx;
  margin-bottom: 0rpx;
  font-family: 'jianti';
  font-size: 40rpx;
}

.height{
  flex: 1;
}

.weight{
  flex: 1;
}

.BMI{
  height: 1;
}

.data{
  display: flex;
  flex-direction: row;
  margin: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 100rpx;
  font-family: 'jianti';
  font-size: 40rpx;
}

.height-data{
  flex: 1;
}

.weight-data{
  flex: 1;
  text-align: center;
}

.BMI-data{
  flex: 1;
  text-align: end;
}

.cell{
  position: relative;
  margin: 30rpx;
  box-shadow: 8px 8px 10px rgba(0, 0, 0, 0.1);
  font-family: 'jianti';
  border-radius: 30rpx;
}

.calorieCard{
  border: 1px solid #fff;
  border-radius: 15rpx;
  background-color: #fff;
  margin: 30rpx;
  justify-content: space-between;
  box-shadow: 8px 8px 10px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

.calorieTitle{
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.calorieTitle .logo_text{
  display: flex;
  justify-content: start;
  align-items: center;
}

.calorieTitle .logo_text .logo{
  margin: 20rpx;
}

.calorieTitle .logo_text .titleText{
  font-family: 'jianti';
  font-size: 40rpx;
}

.calorieTitle .dabiao{
  margin: 30rpx;
}

.calorieData{
  flex: 2;
  display: flex;
}

.calorieData .data_left{
  flex: 1;
  display: flex;
  flex-direction: column;
}

.calorieData .data_right{
  flex: 1;
  display: flex;
  flex-direction: column;
}

.dataTitle{
  flex: 1;
  margin: 30rpx;
}

.calorie_data{
  flex: 2;
  display: flex;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
}

.calorie_data_number{
  font-size: 50rpx;
  margin-right: 10rpx;
}

.calorie_data_unit{
  font-size: 25rpx;
  align-self: flex-end;
}

.feedback_button{
  border: 1px solid #000;
  
}