<view class='profile'>
  <view class="information">
    <view class="information-img">
      <open-data type="userAvatarUrl" ></open-data>
    </view>
    <open-data type="userNickName" class="information-name"></open-data>
  </view>
  <view class="title">
    <view class="height">身高(m)</view>
    <view class="weight">体重(kg)</view>
    <view class="BMI">BMI</view>
  </view>
  <view class="data">
    <view class="height-data" bindtap="showPopup_height">{{height}}</view>
    <view class="weight-data" bindtap="showPopup_weight">{{weight}}</view>
    <view class="BMI-data">{{BMI}}</view>
  </view>
</view>
<van-popup show="{{ show_height }}" position="bottom" custom-style="height: 50%;" bind:close="onClose_height">
  <van-picker columns="{{ height_choose }}" default-index="{{ height-150 }}" bind:change="onChange_height" />
</van-popup>
<van-popup show="{{ show_weight }}" position="bottom" custom-style="height: 50%;" bind:close="onClose_weight">
  <van-picker columns="{{ weight_choose }}" default-index="{{ weight-40 }}" bind:change="onChange_weight" />
</van-popup>


<view class='wrap'>
  <view>
    <view class='date-show'>
      <view class='lt-arrow' bindtap='lastMonth'>
        <image src='https://6669-fit-gc46z-1304760622.tcb.qcloud.la/homepage/arrow-right1.png?sign=575657b4247bd529ea10265f84a39c0a&t=1612004007' mode='aspectFit'></image>
      </view>
      {{year}}年{{month}}月
      <view class='rt-arrow' bindtap='nextMonth'>
        <image src='https://6669-fit-gc46z-1304760622.tcb.qcloud.la/homepage/fanhui-copy.png?sign=5942e2d2ecb547fad8ccfeac57f6f3ea&t=1612004020' mode='aspectFit'></image>
      </view>
    </view>
  </view>
  <view class='header'>
    <view wx:key='key' wx:for='{{date}}' class='{{(index == todayIndex) && isTodayWeek ? "weekMark" : ""}}'>
      {{item}}
      <view></view>
    </view>
  </view>
  <view class='date-box'>
    <view wx:key='key' wx:for='{{dateArr}}' class='{{item.isSigh ? "nowDay" : ""}}' data-date='{{item.isToday}}'>
      <view class='date-head'>
        <view>{{item.dateNum}}</view>
      </view>
    </view>
  </view>

  <view wx:if="{{isTodayWeek}}">
  <view wx:if="{{!isTodaySigh}}"  bindtap = "addsighdate" class="no">
    <button size="default"  class="non_button" plain="{{true}}"  >点击签到</button>
  </view>
  <view wx:if="{{isTodaySigh}}" class = "yes"  >
    <button size="default" class="yes_button"   >今日已签到</button>
  </view>
  </view>
  <view wx:else>
  </view>

  <view class="sighDay_view" >
    <text class="sighDay_text">你已经累计签到{{sighArr.length}}天，冲冲冲！</text> 
  </view>

</view>

<view class="container">
  <ec-canvas id="mychartline" canvas-id="mychart-line" ec="{{ ec }}"></ec-canvas>
</view>

<view class="container2" >
  <ec-canvas id="mychartlineBMI" canvas-id="mychart-line" ec="{{ ec2 }}"></ec-canvas>
</view>