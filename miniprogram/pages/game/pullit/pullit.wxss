}
.shadow_page{
  height: 100vh;
  width: 100%;
  /* z-index: 6; */
  background: rgb(73, 71, 71);
}


@keyframes fade{
  0% {
    opacity: 0;
    color: yellow;
  }
  100% {
    opacity: 1;
    color: green;
  }
}
.sentence:nth-child(1){
  animation-delay: 0s;
}
.sentence:nth-child(2){
  animation-delay: 1s;
}
.sentence:nth-child(3){
  animation-delay: 2s;
}
.sentence:nth-child(4){
  animation-delay: 3s;
}
.sentence:nth-child(5){
  animation-delay: 4s;
}
.sentence:nth-child(6){
  animation-delay: 5s;
}