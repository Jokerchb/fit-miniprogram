}
.rule_btn .showless_arrow{
  height: 64rpx;
  width: 64rpx;
  margin-top: 5.5rpx;
  margin-bottom: 5.5rpx;
  background: url("http://r.photo.store.qq.com/psc?/V10siXyS0lL9dw/TmEUgtj9EK6.7V8ajmQrEAKHmjS6r45B3zTQGEJk3KtPpgZ2PVuJVhXnfJ7tD6tXxjjlr4.F3nsEA4ny4FZtZHiDunkmve1Pg1cZkI6H5Xk!/r");
  background-size: 100% 100%;
}
.rule_content{
  z-index: 7;
  display: none;
  width: 100%;
  height: 500rpx;
  top: 50%;
  margin-top: -250rpx;
  position: fixed;
  color: white;
  font-family: 'cola';
}
/* 考虑是否加上显示动画 */
.rule_content .sentence{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 45rpx;
  text-align: center;
  animation: fade linear 1s;
  opacity: 1;
}
/* 积分按钮 */
