.move_area{
  height: 100vh;
  width: 100%;
  position: fixed;
}
.top_area{
  height: 266.8rpx;
  width: 100%;
}
.top_area .top_shadow{
  height: 900rpx;
  width: 900rpx;
  /* rgb(231, 7, 7) */
  background: rgb(231, 7, 7);
  border-radius: 450rpx;
  margin-left: -75rpx;        /*450-375*/
  margin-top: -633.2rpx;      /*900-266.8*/
  z-index: 4;
}
.drag{
  z-index: 5;
  width: 200rpx;
  height: 200rpx;
  top: 50%;                   /* 50%-100 以iPhone6为例，603/2=301.5px-50px=251.5px */    
  margin-top: -100rpx;        
  margin-right: 275rpx;       /* (750-200)/2 */
  margin-left: 275rpx;        /* (750-200)/2 */
  /* position: fixed; */
}
.drag .drag_item{
  width: 200rpx;
  height: 200rpx;
  box-shadow: 0rpx 0rpx 8rpx 8rpx #DDDDDD;    /* 增加阴影 */
  border-radius: 20rpx;
}
.drag .drag_img{
  margin-left: 25rpx;         /* 25+25+150=200*/
  margin-right: 25rpx;
  width: 150rpx;
  height: 150rpx;
}
.drag .drag_content{
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  text-align: center;
}
.bottom_area{
  height: 266.8rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
}
.bottom_area .bottom_shadow{
  height: 900rpx;
  width: 900rpx;
  background: rgb(70, 231, 6);
  border-radius: 450rpx;
  margin-left: -75rpx;       /*450-375*/
  z-index: 4;
}

.rule_btn{
  z-index: 7;
  /* width: 220rpx; */
  height: 75rpx;
  text-align: center;
  display: flex;
  line-height: 75rpx;
  /* box-shadow: 0rpx 0rpx 8rpx 8rpx #DDDDDD; */
  /* background: rgb(255,255,255); */
  top: 15%;
  position: fixed;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  /* 用于显示更多内容时 */
  /* background: #969696; */
  /* color: white; */
}
.rule_btn .title{
  width: 150rpx;
  font-size: 35rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  font-family: 'cola';
}
.rule_btn .showmore_arrow{
  height: 64rpx;
  width: 64rpx;
  margin-top: 5.5rpx;
  margin-bottom: 5.5rpx;
  background: url("http://r.photo.store.qq.com/psc?/V10siXyS0lL9dw/TmEUgtj9EK6.7V8ajmQrEG4QAE064Zkpl8Ig6TX5iQlnhwojl*ng6*pqbBgLp9K2bwAQ3apKkPeDJ7OOKQd7fkK0CVKnMxMZ5wlbm3Cg3wI!/r");
